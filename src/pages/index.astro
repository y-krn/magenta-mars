---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import FormattedDate from "../components/FormattedDate.astro";
import { getPages } from "../libs/notion/client";
import type { PropertyValueTitle } from "../libs/notion/types";

const pages = await getPages();
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="prose mx-auto">
      <section>
        <ul>
          {
            pages.map((page) => (
              <li class="flex items-center">
                <a href={`/${page.id}/`} class="mr-4">
                  <p class="font-bold mr-1">
                    {
                      (page.properties["件名"] as PropertyValueTitle).title[0]
                        .plain_text
                    }
                  </p>
                </a>
                <p>
                  <FormattedDate date={new Date(page.created_time)} />
                </p>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
