---
import type { ListItemBlock } from "../../libs/notion/types";

type Props = {
  block: ListItemBlock;
};

const { block } = Astro.props;
---

<>
  <ol>
    {
      block.blocks.map((block) => (
        <li>
          {block.type === "numbered_list_item" &&
            block.numbered_list_item.rich_text[0]?.plain_text}
        </li>
      ))
    }
  </ol>
</>
